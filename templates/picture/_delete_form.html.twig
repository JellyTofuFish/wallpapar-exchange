<button type="button" class="btn btn-block btn btn-danger" data-toggle="modal" data-target="#exampleModal">
    Delete
</button>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"> Delete this picture</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this picture?</p>
            </div>
            <div class="modal-footer">
                <form method="post" action="{{ path('picture_delete', {'id': picture.id}) }}">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ picture.id) }}">
                    <button class="btn btn-danger">Delete</button>
                </form>
                <button type="button" class=" btn btn-dark" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
